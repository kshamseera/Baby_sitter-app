<!DOCTYPE html>
<html>
  <head>
    <title>BabySitterApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
  <% if user_signed_in?  %>
   <p>welcome <%= current_user.email %>
    <%= link_to "Sign_out", destroy_user_session_path, method: :delete %> </p>
  <% else %>
    <%= render 'layouts/nav-bar' %>
  <% end %>
  <p id="alert"><%= alert %> </p>
    <%= yield %>
  </body>
</html>
